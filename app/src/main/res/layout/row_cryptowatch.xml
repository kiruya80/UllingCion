<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/p400"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/llTime"
            android:layout_width="@dimen/p500"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="@dimen/p10"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginRight="@dimen/p20"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOpenPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tvClosePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tvHighPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tvLowPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black" />

        </LinearLayout>
    </LinearLayout>
</layout>